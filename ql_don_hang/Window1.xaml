    <Grid>
        <Frame x:Name="Main1"
               NavigationUIVisibility="Hidden"
               Visibility="Collapsed" />

        <Grid Margin="20" x:Name="gridview">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ====================== HEADER ====================== -->
        <DockPanel Grid.Row="0" Margin="0 0 0 20">
            <!-- Icon + title -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="🛒" FontSize="32" Margin="0 0 10 0"/>
                <TextBlock Text="Quản lý đơn hàng" FontSize="28" FontWeight="Bold"/>
            </StackPanel>

            <!-- Nút tạo đơn hàng -->
            <Button Content=" + Tạo đơn hàng "
                    HorizontalAlignment="Right"
                    Padding="15 8"
                    Background="#34C759"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0" Click="Button_Click"
                    />
        </DockPanel>

        <!-- ===================== MAIN CONTENT ===================== -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" >
            <StackPanel>

                <!-- Search box -->
                <Border Background="#F7F9FC" CornerRadius="8" BorderBrush="#E0E6F0" BorderThickness="1" Padding="10" Margin="0 0 0 15">
                    <DockPanel>
                        <TextBlock Text="🔍" Margin="0 0 8 0" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSearch"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 />
                    </DockPanel>
                </Border>

                <!-- Data table -->
                <DataGrid x:Name="dgOrders"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Height="400"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          RowHeight="40"
                          HorizontalGridLinesBrush="#E0E6F0"
                          VerticalGridLinesBrush="#E0E6F0"
                          >

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="MÃ ĐƠN" Binding="{Binding OrderID}" Width="*"/>
                        <DataGridTextColumn Header="KHÁCH HÀNG" Binding="{Binding Customer}" Width="*"/>
                        <DataGridTextColumn Header="SẢN PHẨM" Binding="{Binding Product}" Width="*"/>
                        <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="TỔNG TIỀN" Binding="{Binding Total}" Width="*"/>
                        <!--<DataGridTextColumn Header="NHÂN VIÊN" Binding="{Binding Staff}" Width="*"/>-->
                        <DataGridTextColumn Header="NGÀY BÁN" Binding="{Binding Date}" Width="*"/>
                        <DataGridTextColumn Header="TRẠNG THÁI" Binding="{Binding Status}" Width="*"/>
                        <DataGridTemplateColumn Header="THAO TÁC" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Sửa" Padding="8 2" Margin="0 0 5 0"/>
                                        <Button Content="Xóa" Padding="8 2" Background="#FF3B30" Foreground="White"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty placeholder -->
                <TextBlock x:Name="txtEmpty"
                           Text="Chưa có đơn hàng nào"
                           FontSize="16"
                           Foreground="#8A8A8A"
                           HorizontalAlignment="Center"
                           Margin="0 20 0 0"
                           Visibility="Collapsed"/>

            </StackPanel>
        </Border>

    </Grid>
    </Grid>


</Window>
